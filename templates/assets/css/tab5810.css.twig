/* Set the standrad font-size per sheet */
.sheet p {
    font-size: 20px;
}

/*
#######################################
Most important!!!!!!!!!
To fit the line-size to each line and according to font-size
use p and span and set 1em -> 100% of font-size
#######################################
 */
.sheet p span {
    line-height: 1em;
}
.tab_row{
    height:{{ tab_form.FieldsHeightBrutto * 4 }}px;
    display: flex;
}
.tab_column{
    width: {{ (tab_form.FieldsWidthBrutto + (2 * tab_form.WidthOfBorder) )  * 4  }}px;
    height: {{ tab_form.FieldsHeightBrutto * 4 }}px;
    background-color: #f3f3f3;
    position: relative;
}
.tab_field {
    width: {{ tab_form.FieldsWidthNetto * 4 }}px;
    background-color: #ff9933;
    height: {{ tab_form.FieldsHeightNetto * 4 }}px;
    position: absolute;
    bottom: 0px;
    left: {{ tab_form.WidthOfBorder * 4 }}px;
    border: thin solid #653c16;
}
textarea.editor{
    height: {{ tab_form.FieldsHeightNetto * 4 }}px;
    width: {{ tab_form.FieldsWidthNetto * 4 }}px;
    background-color: #ff9933;
    resize: none;
}
.cke_editable{
    height: {{ tab_form.FieldsHeightNetto * 4 }}px;
}
.cke_editable.cke_focus{
    background-color: #ffffff7d;
}
